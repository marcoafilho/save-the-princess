<%= form_tag sessions_path, class: ['ui', 'form', ('error' if @session_errors.present?)] do |f| %>
  <div class="field">
    <%= email_field_tag :email, params[:email], placeholder: 'E-mail' %>
  </div>

  <div class="fields">
    <div class="twelve wide field">
      <%= password_field_tag :password, nil, placeholder: 'Password' %>
    </div>

    <div class="four wide field">
      <%= submit_tag 'Sign in', class: 'ui fluid blue button' %>
    </div>
  </div>

  <% if @session_errors.present? %>
    <div class="ui error message">
      <ul class="list">
        <% @session_errors.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
